<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 타이틀바 -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="북마크에 추가"
            android:textSize="20sp"
            android:textColor="#fff"
            android:gravity="center"
            android:background="#4BC2C5"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:fontFamily="@font/maplestorylight"/>
    </LinearLayout>
    <!-- //end 타이틀바 -->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"/>

    <!-- Notice -->
    <LinearLayout
        android:padding="24dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="불러온(덮어쓸) 북마크_"
            android:textSize="15dp"
            android:textColor="#000"
            android:alpha="0.87"
            android:gravity="left"
            android:layout_marginBottom="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/maplestorylight"/>

        <TextView
            android:id="@+id/tvlastload"
            android:text="개발자는 코바야시네 메이드래곤을 좋아하지롱"
            android:textSize="18dp"
            android:textColor="#777"
            android:alpha="0.87"
            android:gravity="left"
            android:layout_marginBottom="30dp"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:fontFamily="@font/maplestorylight"/>

        <TextView
            android:id="@+id/textView0"
            android:text="만화 이름_ [추천]"
            android:textSize="15dp"
            android:textColor="#000"
            android:alpha="0.87"
            android:gravity="left"
            android:layout_marginBottom="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/maplestorylight"/>

        <EditText
            android:id="@+id/diaEtMangaName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="18dp"
            android:hint="리스트에 표기될 만화이름 입력"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:singleLine="true"
            android:fontFamily="@font/maplestorylight"/>

        <TextView
            android:id="@+id/dlgUrl3Edit"
            android:text="인덱스 추출_ 0000000"
            android:textSize="13dp"
            android:textColor="#4BC2C5"
            android:paddingTop="20dp"
            android:alpha="0.87"
            android:layout_marginBottom="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:fontFamily="@font/maplestorylight"/>

        <TextView
            android:text="*위 값은 숫자로만 이루어져야 합니다. (e.g. 1234567)"
            android:textSize="13dp"
            android:textColor="#4BC2C5"
            android:alpha="0.87"
            android:layout_marginBottom="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:maxLines="3"
            android:fontFamily="@font/maplestorylight"
            android:paddingBottom="5dp"/>

        <TextView
            android:id="@+id/dlgUrl3"
            android:text="주소_ 0000000"
            android:textSize="13dp"
            android:textColor="#3B9A9C"
            android:alpha="0.87"
            android:layout_marginBottom="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:maxLines="3"
            android:fontFamily="@font/maplestorylight"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="230dp"/>
    </LinearLayout>
    <!-- Notice -->

    <View
        android:background="#66bdbdbd"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <!-- 닫기 버튼 -->
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnDlgCancel"
            android:text="취소"
            android:textSize="15sp"
            android:textColor="#CB4245"
            android:padding="16dp"
            android:gravity="center"
            android:background="#00000000"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="53dp"
            android:onClick="mOnClose"
            android:fontFamily="@font/maplestorylight"/>

        <Button
            android:id="@+id/btnDlgOK"
            android:text="추가"
            android:textSize="15sp"
            android:textColor="#4BC2C5"
            android:padding="16dp"
            android:gravity="center"
            android:background="#00000000"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="53dp"
            android:onClick="mOnClose"
            android:fontFamily="@font/maplestorylight"/>

        <Button
            android:id="@+id/btnDlgOR"
            android:text="덮어쓰기"
            android:textSize="15sp"
            android:textColor="#4BC2C5"
            android:padding="16dp"
            android:gravity="center"
            android:background="#00000000"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="53dp"
            android:onClick="mOnClose"
            android:fontFamily="@font/maplestorylight"/>
    </LinearLayout>
    <!--// 닫기 버튼 -->
</LinearLayout>